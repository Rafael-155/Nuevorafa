@model Nuevorafa.Models.Contacto

<h2 style="margin: 5%;">contacto</h2>

@using (Html.BeginForm("EnviarMensaje", "Contacto", FormMethod.Post))
{
    <div class="form-group" style="margin: 5%; >
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group" style="margin: 5%;">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group" style="margin: 5%;">
        @Html.LabelFor(model => model.Message)
        @Html.TextBoxFor(model => model.Message, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Message)
    </div>
    <button type="submit" class="btn btn-primary" style="margin: 5%;">Enviar</button>
}
<h1>@ViewData["Message"]</h1>

